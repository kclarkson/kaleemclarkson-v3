{
  "name": "kaleemclarkson-editor",
  "version": "1.0.0",
  "description": "Markdown page editor for Cecil static site",
  "main": "editor/server.js",
  "scripts": {
    "editor": "node editor/server.js",
    "start": "node editor/server.js",
    "dev": "concurrently \"npm run watch:sass\" \"cecil serve\"",
    "watch:sass": "sass --watch --quiet-deps --load-path=node_modules scss/styles.scss:docs/css/styles.css --style=expanded",
    "build:sass": "sass --quiet --load-path=node_modules scss/styles.scss:docs/css/styles.css --style=compressed",
    "build": "npm run build:sass && cecil build",
    "preview": "cecil serve --preview"
  },
  "keywords": [
    "cecil",
    "markdown",
    "editor",
    "cms"
  ],
  "author": "Kaleem Clarkson",
  "license": "MIT",
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.8",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "sass": "^1.94.0"
  }
}
