<!DOCTYPE html>
<html lang="{{ site.language }}">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    {%~ include 'partials/metatags.html.twig' ~%}
    <link rel="icon" type="image/x-icon" href="docs/favicon.png" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <!-- Font Awesome -->
    <script src="https://use.fontawesome.com/releases/v6.5.1/js/all.js" crossorigin="anonymous"></script>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Overpass:wght@400;600;800;900&display=swap" rel="stylesheet">

    <!-- Theme Styles -->
    {{ html(asset('scss/styles.scss')) }}
  </head>
  <body>

    <!-- Hero Section with Video Background -->
    <section class="hero-section">
      <!-- Video Background -->
      <div class="hero-video-wrapper">
        <video class="hero-video" playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop">
          <source src="{{ site.data.homepage['hero-section'].video_src }}" type="video/mp4">
        </video>
        <div class="hero-video-overlay"></div>
      </div>

      <!-- Hero Content -->
      <div class="container h-100">
        <div class="row h-100 align-items-center">
          <div class="hero-content">
            <h1 class="hero-title mb-4 col-lg-8">
              <span class="accent-text-orange">{{ site.data.homepage['hero-section'].title_line1 }}</span><br>
              <span class="text-white">{{ site.data.homepage['hero-section'].title_line2 }}</span>
            </h1>
            <p class="hero-subtitle col-lg-6">{{ site.data.homepage['hero-section'].subtitle }}</p>
            <p class="hero-description col-lg-7">{{ site.data.homepage['hero-section'].description }}</p>
            <div class="d-flex flex-wrap gap-3 mt-4">
              <a href="{{ site.data.homepage['hero-section'].button1.link }}" class="btn btn-primary">{{ site.data.homepage['hero-section'].button1.text }}</a>
              <a href="{{ site.data.homepage['hero-section'].button2.link }}" class="btn btn-secondary">{{ site.data.homepage['hero-section'].button2.text }}</a>
            </div>
          </div>
          
        </div>
      </div>
    </section>

    <!-- Testimonial Bar -->
    <section class="testimonial-bar pv-4 bg-white">
      <div class="container">
        <div class="row">
          <div class="col-12 text-center">
            <div class="star-rating mb-2">{% for i in 1..site.data.homepage['testimonial-bar'].stars %}★{% endfor %}</div>
            <h3 class="fw-black text-uppercase mb-2">"{{ site.data.homepage['testimonial-bar'].title }}"</h3>
            <p class="text-muted mb-0">— {{ site.data.homepage['testimonial-bar'].source }}</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured In / Credentials Section -->
    <section class="credentials-section pv-4">
      <div class="container">
        <div class="row">
          <div class="col-12 text-center mb-4">
            <h2 class="section-title text-uppercase">{{ site.data.homepage['credentials-section'].title }}</h2>
          </div>
        </div>
        <div class="row justify-content-space-between">
          <div class="col-lg-12">
            <div class="logo-grid">
              {% for client in site.data.homepage['credentials-section'].logos %}
              <div class="client-logo" title="{{ client.name }}">{{ client.svg | raw }}</div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </section>

     <!-- Keynote Topics Section -->
    <section class="keynote-results pv-5">
      <div class="container">
        <div class="row mb-4">
          <div class="col-12 text-center">
            <h2 class="section-title">{{ site.data.homepage['keynotes-section'].section_title }} <span class="accent-text">{{ site.data.homepage['keynotes-section'].section_title_accent }}</span></h2>
          </div>
        </div>
        <div class="row g-4">
          {% for keynote in site.data.homepage['keynotes-section'].keynote %}
          <div class="col-lg-4">
            <div class="keynote-card h-100">
              <div class="keynote-header" style="background-image: url('{{ keynote.image }}');">
                <div class="keynote-header-overlay"></div>
                <h3 class="keynote-title">{{ keynote.title }}</h3>
              </div>
              <div class="keynote-body">
                <p class="keynote-description">{{ keynote.description }}</p>
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </section>

    <!-- People, Trust and Connection Advantage -->
    <section class="big-idea-section pv-4">
      <div class="container">
        <div class="row">
          <div class="col-lg-7">
            <h2 class="section-title mb-4">
              <span class="accent-text-orange">{{ site.data.homepage['big-idea-section'].title }}</span><br>
              {{ site.data.homepage['big-idea-section'].subtitle }}
            </h2>
            <p class="section-lead mb-4">
              {{ site.data.homepage['big-idea-section'].lead }}
            </p>
            {{ site.data.homepage['big-idea-section'].content | markdown_to_html }}
            <div class="d-flex flex-wrap gap-3 mt-5">
              <a href="{{ site.data.homepage['big-idea-section'].cta_primary_link }}" class="btn btn-primary">{{ site.data.homepage['big-idea-section'].cta_primary_text }}</a>
              <a href="{{ site.data.homepage['big-idea-section'].cta_secondary_link }}" class="btn btn-outline-primary">{{ site.data.homepage['big-idea-section'].cta_secondary_text }}</a>
            </div>
          </div>
          <div class="col-lg-5">
            <div class="big-idea-image mb-4">
              <img src="{{ site.data.homepage['big-idea-section'].image }}" alt="Kaleem on stage" class="img-fluid rounded shadow-lg">
            </div>
          </div>
        </div>
      </div>
    </section>

        <!-- About Section -->
    <section id="about" class="about-section pv-4">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-5">
            <div class="about-image mb-4 mb-lg-0">
              <img src="{{ site.data.homepage['about-section'].image }}" alt="{{ site.data.homepage['about-section'].image_alt }}" class="img-fluid rounded">
            </div>
          </div>
          <div class="col-lg-7">
            <h2 class="section-title">{{ site.data.homepage['about-section'].title }} <span class="accent-text">{{ site.data.homepage['about-section'].title_accent }}</span></h2>
            {{ site.data.homepage['about-section'].content | markdown_to_html }}
          </div>
        </div>
      </div>
    </section>


    <!-- Signature Themes Section -->
    <section class="keynote-themes pv-4">
      <div class="container">
        <div class="row mb-5">
          <div class="col-12 text-center">
            <h2 class="section-title section-title-white">{{ site.data.homepage['signature-themes'].section_title }} <span class="accent-text">{{ site.data.homepage['signature-themes'].section_title_accent }}</span></h2>
          </div>
        </div>
        <div class="row g-4">
          {% for theme in site.data.homepage['signature-themes'].themes %}
          <div class="col-lg-4">
            <div class="keynote-card h-100">
              <div class="keynote-header" style="background-image: url('{{ theme.image }}');">
                <div class="keynote-header-overlay"></div>
                <h3 class="keynote-title">{{ theme.title }}</h3>
              </div>
              <div class="keynote-body">
                <p class="keynote-description">{{ theme.description }}</p>
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </section>

    {%~ include 'partials/pricing.html.twig' ~%}

     <!-- Testimonials Section -->
    <section class="testimonials-section pv-4">
      <div class="container">
        <div class="row mb-5">
          <div class="col-12 text-center">
            <h2 class="section-title">{{ site.data.homepage['testimonials-section'].section_title }} <span class="accent-text">{{ site.data.homepage['testimonials-section'].section_title_accent }}</span></h2>
          </div>
        </div>
        <div class="row g-4 align-items-center">
          <!-- Testimonials Column -->
          <div class="col-lg-6">
            <div class="testimonials-stack">
              {% for testimonial in site.data.homepage['testimonials-section'].testimonials %}
              <div class="testimonial-card-horizontal">
                <p class="testimonial-text">"{{ testimonial.quote }}"</p>
                <div class="testimonial-author">
                  <strong>{{ testimonial.author }}</strong><br>
                  <small>{{ testimonial.organization }}</small>
                </div>
              </div>
              {% endfor %}
            </div>
          </div>

          <!-- Video Column -->
          <div class="col-lg-6">
            <div class="testimonial-video-wrapper">
              <div class="ratio ratio-16x9">
                <iframe
                  src="https://www.youtube.com/embed/FVAwBTixIbc"
                  title="YouTube video"
                  allowfullscreen
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                ></iframe>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>


    <!-- Booking CTA Section -->
    <section id="booking" class="booking-section pv-4">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-8 text-center">
            <h2 class="section-title text-white">{{ site.data.homepage['booking-section'].title }} <span class="accent-text">{{ site.data.homepage['booking-section'].title_accent }}</span>?</h2>
            <p class="lead text-white mb-4">
              {{ site.data.homepage['booking-section'].subtitle }}
            </p>
            <a href="{{ site.data.homepage['booking-section'].cta_link }}" class="btn btn-primary btn-lg">{{ site.data.homepage['booking-section'].cta_text }}</a>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
      <div class="container">
        <p class="mb-0">&copy; {{ "now"|date("Y") }} {{ site.title }}. All rights reserved.</p>
      </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>
