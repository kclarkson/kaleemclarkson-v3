<!DOCTYPE html>
<html lang="{{ site.language }}">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    {%~ include 'partials/metatags.html.twig' ~%}
    <link rel="icon" type="image/x-icon" href="docs/favicon.png" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <!-- Font Awesome -->
    <script src="https://use.fontawesome.com/releases/v6.5.1/js/all.js" crossorigin="anonymous"></script>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Overpass:wght@400;600;800;900&display=swap" rel="stylesheet">

    <!-- Theme Styles -->
    {{ html(asset('scss/styles.scss')) }}
  </head>
  <body>

    <!-- Hero Section with Video Background -->
    <section class="hero-section">
      <!-- Video Background -->
      <div class="hero-video-wrapper">
        <video class="hero-video" playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop">
          <source src="/videos/homepage-hero.mp4" type="video/mp4">
        </video>
        <div class="hero-video-overlay"></div>
      </div>

      <!-- Hero Content -->
      <div class="container h-100">
        <div class="row h-100 align-items-center">
          <div class="col-lg-8">
            <div class="hero-content">
              <h1 class="hero-title mb-4">
                <span class="accent-text-orange">{{ page.hero.title_line1|default('Find Your') }}</span><br>
                <span class="text-white">{{ page.hero.title_line2|default('ENERGY EDGE') }}</span>
              </h1>
              <p class="hero-subtitle">{{ page.hero.subtitle|default('Transform Your Team\'s Performance Through Human Connection') }}</p>
              <p class="hero-description">{{ page.hero.description|default('Since 2013, Kaleem Clarkson has helped leaders at Fortune 500 companies and innovative startups build remote cultures where people thrive and businesses flourish.') }}</p>
              <div class="d-flex flex-wrap gap-3 mt-4">
                <a href="{{ page.hero.button1.link|default('#video') }}" class="btn btn-custom-primary">{{ page.hero.button1.text|default('WATCH KALEEM IN ACTION') }}</a>
                <a href="{{ page.hero.button2.link|default('#booking') }}" class="btn btn-custom-secondary">{{ page.hero.button2.text|default('BOOK KALEEM') }}</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Testimonial Bar -->
    <section class="testimonial-bar py-4 bg-white">
      <div class="container">
        <div class="row">
          <div class="col-12 text-center">
            <div class="star-rating mb-2">{% for i in 1..site.data.homepage['testimonial-bar'].stars %}★{% endfor %}</div>
            <h3 class="fw-black text-uppercase mb-2">"{{ site.data.homepage['testimonial-bar'].title }}"</h3>
            <p class="text-muted mb-0">— {{ site.data.homepage['testimonial-bar'].source }}</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured In / Credentials Section -->
    <section class="credentials-section pv-4">
      <div class="container">
        <div class="row">
          <div class="col-12 text-center mb-4">
            <h2 class="section-title text-uppercase">{{ site.data.homepage.clients.title }}<span class="accent-text">:</span></h2>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-lg-10">
            <div class="logo-grid">
              {% for client in site.data.homepage.clients.logos %}
              <img src="{{ client.image }}" alt="{{ client.alt }}" class="client-logo">
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Keynote Topics Section -->
    <section class="keynotes-section pv-4">
      <div class="container">
        <div class="row g-4">
          {% for keynote in site.data.homepage.keynotes %}
          <div class="col-lg-4">
            <div class="keynote-card position-relative h-100">
              <div class="keynote-image-placeholder position-relative">
                <img src="{{ keynote.image }}" alt="{{ keynote.title }}" class="img-fluid w-100" style="height: 400px; object-fit: cover;">
                <div class="card-overlay"></div>
              </div>
              <div class="card-overlay-content text-white">
                <h3 class="keynote-title text-white mb-3">{{ keynote.title }}</h3>
                <p class="mb-3">{{ keynote.description }}</p>
                <a href="{{ keynote.link }}" class="learn-more-link">LEARN MORE →</a>
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </section>

    <!-- Energy Management Section -->
    <section class="big-idea-section pv-4">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-6">
            <h2 class="section-title mb-4">
              <span class="accent-text-orange">{{ site.data.homepage.energy.title }}</span><br>
              {{ site.data.homepage.energy.subtitle }}
            </h2>
            <p class="lead mb-4">
              {{ site.data.homepage.energy.lead }}
            </p>
            {{ site.data.homepage.energy.content | markdown_to_html }}
            <div class="d-flex flex-wrap gap-3 mt-5">
              <a href="{{ site.data.homepage.energy.cta_primary_link }}" class="btn btn-custom-primary">{{ site.data.homepage.energy.cta_primary_text }}</a>
              <div>
                <a href="{{ site.data.homepage.energy.cta_secondary_link }}" class="d-block mt-3 fw-semibold text-dark text-decoration-none">{{ site.data.homepage.energy.cta_secondary_text }}</a>
              </div>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="big-idea-image-placeholder mb-4 mb-lg-0 ps-lg-5">
              <img src="{{ site.data.homepage.energy.image }}" alt="Kaleem on stage" class="img-fluid rounded shadow-lg">
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Signature Themes Section -->
    <section class="keynotes-section pv-4">
      <div class="container">
        <div class="row mb-5">
          <div class="col-12 text-center">
            <h2 class="section-title">{{ site.data.homepage.themes.section_title }} <span class="accent-text">{{ site.data.homepage.themes.section_title_accent }}</span></h2>
          </div>
        </div>
        <div class="row g-4">
          {% for theme in site.data.homepage.themes.themes %}
          <div class="col-lg-4">
            <div class="keynote-card">
              <div class="keynote-image-placeholder mb-3">
                <img src="{{ theme.image }}" alt="{{ theme.alt }}" class="img-fluid rounded">
              </div>
              <h3 class="keynote-title">{{ theme.title }}</h3>
              <p>{{ theme.description }}</p>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </section>

    <!-- Testimonials Section -->
    <section class="testimonials-section pv-4">
      <div class="container">
        <div class="row mb-5">
          <div class="col-12 text-center">
            <h2 class="section-title text-white">{{ site.data.homepage.testimonials.section_title }} <span class="accent-text">{{ site.data.homepage.testimonials.section_title_accent }}</span></h2>
          </div>
        </div>
        <div class="row g-4">
          {% for testimonial in site.data.homepage.testimonials.testimonials %}
          <div class="col-lg-4">
            <div class="testimonial-card">
              <p class="testimonial-text">"{{ testimonial.quote }}"</p>
              <div class="testimonial-author">
                <strong>{{ testimonial.author }}</strong><br>
                <small>{{ testimonial.organization }}</small>
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="about-section pv-4">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-5">
            <div class="about-image-placeholder mb-4 mb-lg-0">
              <img src="{{ site.data.homepage.about.image }}" alt="{{ site.data.homepage.about.image_alt }}" class="img-fluid rounded">
            </div>
          </div>
          <div class="col-lg-7">
            <h2 class="section-title">{{ site.data.homepage.about.title }} <span class="accent-text">{{ site.data.homepage.about.title_accent }}</span></h2>
            {{ site.data.homepage.about.content | markdown_to_html }}
          </div>
        </div>
      </div>
    </section>

    <!-- Booking CTA Section -->
    <section id="booking" class="booking-section pv-4">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-8 text-center">
            <h2 class="section-title text-white">{{ site.data.homepage.booking.title }} <span class="accent-text">{{ site.data.homepage.booking.title_accent }}</span>?</h2>
            <p class="lead text-white mb-4">
              {{ site.data.homepage.booking.subtitle }}
            </p>
            <a href="{{ site.data.homepage.booking.cta_link }}" class="btn btn-custom-primary btn-lg">{{ site.data.homepage.booking.cta_text }}</a>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
      <div class="container">
        <p class="mb-0">&copy; {{ "now"|date("Y") }} {{ site.title }}. All rights reserved.</p>
      </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>
