<!DOCTYPE html>
<html lang="{{ site.language }}">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    {%~ include 'partials/metatags.html.twig' ~%}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico')|url }}" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <!-- Font Awesome -->
    <script src="https://use.fontawesome.com/releases/v6.5.1/js/all.js" crossorigin="anonymous"></script>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Overpass:wght@400;600;800;900&display=swap" rel="stylesheet">

    <!-- Theme Styles -->
    <link href="{{ asset('scss/styles.scss')|url }}" rel="stylesheet" />
  </head>
  <body>

    <!-- Hero Section -->
    <section class="hero-section">
      <div class="container">
        <div class="row">
          <div class="col-lg-10 col-xl-8 hero-content">
            <h1 class="hero-title">
              {{ site.title }}<span class="accent-text">.</span>
            </h1>
            <p class="hero-subtitle">{{ site.baseline|default('Digital Creator & Developer') }}</p>
            {%- block content ~%}
            {%- if page.content is not empty -%}
            <div class="hero-description">
              {{ page.content }}
            </div>
            {%- else -%}
            <p class="hero-description">
              Creating innovative digital experiences through code, design, and strategy.
              Passionate about building solutions that make a difference.
            </p>
            {%- endif -%}
            {%- endblock ~%}
            <div class="d-flex flex-wrap gap-3 mt-4">
              <a href="#about" class="btn btn-custom-primary">Learn More</a>
              <a href="#contact" class="btn btn-custom-secondary">Get In Touch</a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="about-section">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-8 text-center">
            <h2 class="section-title">About <span class="accent-text">Me</span></h2>
            <p class="section-subtitle">Crafting digital experiences that inspire</p>
            <p class="lead">
              {{ site.description|default('I am a passionate developer and designer dedicated to creating
              meaningful digital experiences. With expertise in modern web technologies and a keen eye for
              design, I bring ideas to life through clean code and beautiful interfaces.') }}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="services-section">
      <div class="container">
        <div class="row mb-5">
          <div class="col-12 text-center">
            <h2 class="section-title">What I <span class="accent-text">Do</span></h2>
            <p class="section-subtitle">Services & Expertise</p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6 col-lg-4">
            <div class="service-card">
              <div class="service-icon">
                <i class="fas fa-code"></i>
              </div>
              <h3 class="service-title">Development</h3>
              <p>Building robust, scalable web applications using modern technologies and best practices.</p>
            </div>
          </div>
          <div class="col-md-6 col-lg-4">
            <div class="service-card">
              <div class="service-icon">
                <i class="fas fa-palette"></i>
              </div>
              <h3 class="service-title">Design</h3>
              <p>Creating beautiful, user-centered interfaces that combine aesthetics with functionality.</p>
            </div>
          </div>
          <div class="col-md-6 col-lg-4">
            <div class="service-card">
              <div class="service-icon">
                <i class="fas fa-rocket"></i>
              </div>
              <h3 class="service-title">Strategy</h3>
              <p>Developing digital strategies that drive results and achieve business objectives.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Social Section -->
    <section id="contact" class="social-section">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-6 text-center">
            <h2 class="section-title text-white">Let's <span class="accent-text">Connect</span></h2>
            <p class="text-white mb-4">Find me on social media or reach out directly</p>
            <div class="homepage-social-icons">
              {%- if site.social.twitter.site is defined ~%}
              <a href="https://twitter.com/{{ site.social.twitter.site }}" class="homepage-social-icon" aria-label="Twitter">
                <i class="fab fa-twitter"></i>
              </a>
              {%- endif ~%}
              {%- if site.social.facebook.username is defined ~%}
              <a href="https://facebook.com/{{ site.social.facebook.username }}" class="homepage-social-icon" aria-label="Facebook">
                <i class="fab fa-facebook-f"></i>
              </a>
              {%- endif ~%}
              {%- if site.social.instagram.username is defined ~%}
              <a href="https://instagram.com/{{ site.social.instagram.username }}" class="homepage-social-icon" aria-label="Instagram">
                <i class="fab fa-instagram"></i>
              </a>
              {%- endif ~%}
              {%- if site.social.github.username is defined ~%}
              <a href="https://github.com/{{ site.social.github.username }}" class="homepage-social-icon" aria-label="GitHub">
                <i class="fab fa-github"></i>
              </a>
              {%- endif ~%}
              {%- if site.social.linkedin.username is defined ~%}
              <a href="https://linkedin.com/in/{{ site.social.linkedin.username }}" class="homepage-social-icon" aria-label="LinkedIn">
                <i class="fab fa-linkedin"></i>
              </a>
              {%- endif ~%}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
      <div class="container">
        <p class="mb-0">&copy; {{ "now"|date("Y") }} {{ site.title }}. All rights reserved.</p>
      </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>
