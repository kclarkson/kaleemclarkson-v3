<!-- Footer -->
<footer class="footer">
  <div class="container">
    <div class="row footer-content">
      <div class="col-md-6 mb-4 mb-md-0">
        <h5>{{ site.title }}</h5>
        <p>{{ site.description|default('') }}</p>
        <div class="footer-social-icons">
          <a href="https://www.linkedin.com/in/kaleemclarkson/" class="footer-social-icon" aria-label="LinkedIn" target="_blank" rel="noopener noreferrer">
            <i class="fab fa-linkedin-in"></i>
          </a>
          <a href="https://www.youtube.com/@KaleemClarkson" class="footer-social-icon" aria-label="YouTube" target="_blank" rel="noopener noreferrer">
            <i class="fab fa-youtube"></i>
          </a>
          <a href="https://www.instagram.com/kaleemclarkson/" class="footer-social-icon" aria-label="Instagram" target="_blank" rel="noopener noreferrer">
            <i class="fab fa-instagram"></i>
          </a>
          <a href="https://www.threads.com/@kaleemclarkson" class="footer-social-icon" aria-label="Threads" target="_blank" rel="noopener noreferrer">
            <i class="fab fa-threads"></i>
          </a>
          <a href="https://www.facebook.com/kaleemsclarkson" class="footer-social-icon" aria-label="Facebook" target="_blank" rel="noopener noreferrer">
            <i class="fab fa-facebook-f"></i>
          </a>
        </div>
      </div>
      <div class="col-md-3 mb-4 mb-md-0">
        <h5>Quick Links</h5>
        <ul class="list-unstyled">
          <li><a href="{{ url() }}">Home</a></li>
          {%- for item in site.menus.main|default([])|sort_by_weight ~%}
          <li><a href="{{ url(item.url) }}">{{ item.name }}</a></li>
          {%- endfor ~%}
        </ul>
      </div>
      <div class="col-md-3">
        <h5>Contact</h5>
        {%- if site.email is defined -%}
        <p><a href="mailto:{{ site.email }}">{{ site.email }}</a></p>
        {%- endif -%}
      </div>
    </div>
    <div class="footer-bottom">
      <p class="mb-0">&copy; {{ "now"|date("Y") }} {{ site.title }}. All rights reserved.</p>
    </div>
  </div>
</footer>
