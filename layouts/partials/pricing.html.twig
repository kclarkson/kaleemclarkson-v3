{% set pricing = site.data.homepage['pricing-section']|default(null) %}

{% if pricing %}
  <section class="pricing-section pv-5">
    <div class="container">
      {% if pricing.component_title or pricing.intro_blurb %}
        <div class="row text-center mb-2">
          <div class="col-lg-8 mx-auto">
            <h2 class="section-title">
              {{ pricing.component_title }}
            </h2>
            {% if pricing.intro_blurb %}
              <p class="section-subtitle">{{ pricing.intro_blurb }}</p>
            {% endif %}
          </div>
        </div>
      {% endif %}

      {% if pricing.offerings %}
        <div class="row g-4">
          {% for offering in pricing.offerings %}
            <div class="col-lg-6">
              <div class="pricing-card">
                <div class="pricing-card__header">
                  <h3 class="pricing-card__title">{{ offering.title }}</h3>
                  <p class="pricing-card__subtitle">{{ offering.subtitle }}</p>
                  <div class="pricing-card__price-range">{{ offering.price_range }}</div>
                </div>

                <div class="pricing-card__body">
                  <p class="pricing-card__description">{{ offering.description }}</p>

                  {% if offering.included %}
                    <div class="pricing-card__included">
                      <p class="pricing-card__included-label">What's included:</p>
                      <ul class="pricing-card__features list-unstyled">
                        {% for item in offering.included %}
                          <li>
                            <span class="pricing-card__feature-icon">
                              <i class="fa-solid fa-check"></i>
                            </span>
                            <span>{{ item }}</span>
                          </li>
                        {% endfor %}
                      </ul>
                    </div>
                  {% endif %}
                </div>

                <div class="pricing-card__footer">
                  <div class="pricing-card__meta">
                    <div class="pricing-card__meta-item">
                      <span class="pricing-card__meta-label">Duration:</span>
                      <span class="pricing-card__meta-value">{{ offering.duration }}</span>
                    </div>
                    <div class="pricing-card__meta-item">
                      <span class="pricing-card__meta-label">Ideal for:</span>
                      <span class="pricing-card__meta-value">{{ offering.ideal_for }}</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      {% endif %}

      {# CTA Button #}
      {% if pricing.primary_cta %}
        <div class="row mt-5">
          <div class="col-lg-8 mx-auto text-center">
            <div class="pricing-cta">
              {% include 'partials/calendly-button.html.twig' with {
                text: pricing.primary_cta.label,
                btn_class: 'btn-primary',
                btn_size: 'btn-lg',
                show_icon: true
              } %}
            </div>
          </div>
        </div>
      {% endif %}
    </div>
  </section>
{% endif %}
